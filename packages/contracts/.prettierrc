{
    "printWidth": 120,
    "trailingComma": "es5",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "semi": true,
                "printWidth": 80,
                "tabWidth": 4,
                "singleQuote": false
            }
        },
        {
            "files": "*.ts",
            "options": {
                "printWidth": 80,
                "trailingComma": "none",
                "semi": true,
                "singleQuote": false,
                "tabWidth": 4,
                "bracketSpacing": true
            }
        }
    ]
}
